@model List<Stock>

@{
	ViewBag.Title = "Stocks";
}

<div class="flex stocks-list">
	<div id="stock-list" class="flex-1">
		<div class="box">
			<h3 class="text-grey mb">Stocks</h3>

			<ul class="list">
				@foreach (var stock in Model)
				{
					await Html.RenderPartialAsync("_StockRowPartialView", stock);
				}
			</ul>
		</div>
	</div>

	<div id="selected-stock" class="flex-1">
		@if (ViewBag.stock != null)
		{
			<vc:selected-stock stock="@ViewBag.stock"></vc:selected-stock>
		}
	</div>
</div>
